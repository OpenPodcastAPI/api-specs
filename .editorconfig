# -*- coding: utf-8 -*-

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4

# MD files
[*.{md, mdx}]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false

# CSS, HTML, JS, JSON, YML
[*.{css,html,js,json,y{a,}ml}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
